/* pages/goods/goods/goods.wxss */
@import "../../../style/iconfont.wxss";
.search{
  width:calc(100% - 40rpx);
  height:70rpx;
  border-radius: 5rpx;
  background-color: #fafafa;
  padding-left: 15rpx;
  box-sizing:border-box;
  margin-left: 20rpx;
  border: 1rpx solid #ddd;
  display:-webkit-flex;
  flex-direction: row; 
  align-items: center;
}

.top{
  width:100%;
  position: fixed;
  top:0;
  left:0;
  z-index: 9999999;
  background-color: #fff;
}

.Nav{

  display:-webkit-flex;
  flex-direction: row; 
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid #eee;
}

.Nav_list{
  flex:1;
  height:90rpx;
  display:-webkit-flex;
  flex-direction: row; 
  align-items: center;
  justify-content: center;
}

.Pro_list{
  flex:1;
  display:-webkit-flex;  
  justify-content: center;
  border-bottom: 1rpx solid #eee;
}

.Pro_list{
  flex:1;
  display:-webkit-flex; 

}
.Pro_list .Pro_list_co{
  flex:1;
  display:-webkit-flex; 
  flex-direction: row;
  padding: 30rpx;
}

.Pro_list_pic{
  width:200rpx;
  height:200rpx;
  background-color: #ccc;
}

.Pro_list_title{
  flex:1;
  display:-webkit-flex; 
  box-sizing:border-box;
  padding-left: 30rpx;
  flex-direction:column;
  justify-content:space-between;

}

.titles{
  overflow : hidden;
  color: #333;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-height: 40rpx;
  -webkit-box-orient: vertical;
}

.overflow{
  overflow: hidden;
}

.mask{ 
  height:calc(100% - 160rpx);
  width:100%; 
  overflow: hidden;
  background-color: rgba(0, 0, 0, 0.1);
  position:absolute;
  top:160rpx;
  opacity:0;
  left:0;
}

.classify{
  width:100%;
  height:0;
  position: absolute;
  top:162rpx;
  left:0;
  background-color: #fff;
}

.sort{
  width:100%; 
  position: absolute;
  top:162rpx;
  left:0;
  height:0rpx;
  box-sizing:border-box;
  background-color: #fff;
  overflow: hidden;
  
}

.sort_list{ 
  padding-left: 30rpx;
  padding-right: 30rpx;
  height:100rpx;
  display:-webkit-flex;  
  box-sizing:border-box;
  flex-direction: row;
  align-items: center;
  justify-content:space-between;
  border-bottom: 1rpx solid #eee;
}