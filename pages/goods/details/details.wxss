/* pages/goods/details/details.wxss */

.main {
  height: calc(100% - 100rpx);
}

.detail_depict {
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx;
}

.detail_title {
  height: 85rpx;
  padding-bottom: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.detail_format {
  display: -webkit-flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;
}

.detail_sq {
  width: 100%;
  display: -webkit-flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 30rpx;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
}

.btn {
}

.foot {
  position: fixed;
  display: -webkit-flex;
  flex-direction: row;
  bottom: 0;
  left: 0;
  height: 100rpx;
  width: 100%;
  background-color: #ccc;
}

.btns {
  flex: 1;
  display: -webkit-flex;
  flex-direction: row;
  height: 100rpx;
  align-items: center;
  justify-content: center;
}

.add {
  flex: 1;
  display: -webkit-flex;
  flex-direction: row;
  align-items: center;
  height: 100rpx;
  justify-content: center;
}

.mask{
  height:100%;
  width:100%; 
  background-color: rgba(0, 0, 0, 0.4);
  position:absolute;
  top:0rpx;
  opacity:0;
  left:0;
}

.buy{
  width:100%;
  height:500rpx;
  background-color: #fff;
  position:fixed;
  bottom:-500rpx; 
  left:0;
}

.buy_num{
  display:-webkit-flex;
  flex:1;
  height:400rpx;
}

.sure{
  width: 100%;
  height:100rpx;
  background-color: #eee;
  display:-webkit-flex;
  justify-content: center;
  align-items: center;
}

.Pro_list{
  flex:1;
  display:-webkit-flex;  
  justify-content: center;
  
}

.Pro_list{
  flex:1;
  display:-webkit-flex; 
  flex-direction:column;
}
.Pro_list .Pro_list_co{   
  display:-webkit-flex;  
  flex-direction: row;
  padding: 30rpx;
  padding-top:0; 
  border-bottom: 1rpx solid #eee;
}

.Pro_list_pic{
  width:200rpx;
  height:200rpx;
  background-color: #ccc;
}

.Pro_list_title{
  flex:1;
  height:200rpx;
  display:-webkit-flex; 
  box-sizing:border-box;
  padding-left: 30rpx;
  flex-direction:column;
  justify-content:space-between;

}

.titles{
  overflow : hidden;
  color: #333;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-height: 40rpx;
  -webkit-box-orient: vertical;
}

.num{
  display:-webkit-flex; 
  justify-content:space-between;
  padding: 30rpx;
}
