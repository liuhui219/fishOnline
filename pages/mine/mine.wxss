
.userinfo { 
  display: flex;
  align-items:center;
}

.userinfo-avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  margin-left: 20rpx;
}

.userinfo-nickname {
  color:#808080;
  font-size: 24rpx;
  margin-left: 10rpx;
  margin-top: 20rpx; 
}
.lineBg{
  background-color: #000000;
  width:100%;
  height: 1rpx;
  margin-top: 20rpx;
}

.order {
  display: inline-flex;
  justify-content: space-between;
  width: 100%;
  margin-left: 20rpx;
  margin-top: 10rpx;
}
.orderRight{
    display: flex;
  align-items:center;
  height: 80rpx;
  margin-right: 30rpx;
}
.orderImg{
  width: 45rpx;
  height: 45rpx;
  border-radius: 5%;
}
.orderTxt{
   color:#808080;
  font-size: 24rpx;
}
.itemRoot{
 display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-content: space-between;
  margin-left: 20rpx;
  margin-right: 30rpx;
  margin-top: 50rpx;
  border-bottom: 1px solid #000;
  padding-bottom: 20rpx;
}
.itemRootTwo{
 display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-content: space-between;
  margin-left: 20rpx;
  margin-right: 30rpx;
  margin-top: 50rpx;
}
.itemView{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.itemImageView{
  width: 80rpx;
  height: 80rpx;
  border-radius: 10%;
}
.itemTextView{
    color:#808080;
   font-size: 24rpx;
  margin-top: 10rpx;
}
.buttonRoot{
  flex-direction: column;
  margin-top: 40rpx;
  border-top:1px solid #f0f0f0;
  border-bottom:1px solid #f0f0f0;

}
 
.changeBtn[plain] {
    color:#808080;
    font-size:24rpx;
  border: none!important;
} 

.changeBtn { 

  border:none; 
}

