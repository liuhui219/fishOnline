/* pages/my/index/index.wxss */
@import "../../../style/iconfont.wxss";
.main{
  height:100%;
  background-color: #eee;
}

.userinfo{
  width:100%;
  padding-top: 50rpx;
  padding-bottom: 50rpx;
  display:-webkit-flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  flex-direction:column;
  border-bottom: 2rpx solid #eee;
}

.pic{
  width:140rpx;
  height:140rpx;
  display:-webkit-flex;
  justify-content: center;
  align-items: center;
  border-radius: 70rpx;
  background-color: #ccc;
}

.phone{
  margin-top: 50rpx
}

.orders{
  width:calc(100% - 60rpx);
  margin-left: 30rpx;
  margin-right: 30rpx;
  box-sizing:border-box;
  display:-webkit-flex;
  flex-direction:column;
  background-color: #fff;
  border-radius: 10rpx;
  margin-top: 30rpx
}

.order_all{
  width:100%;
  padding: 20rpx;
  display:-webkit-flex;
  box-sizing:border-box;
  flex-direction:row;
  justify-content:space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.order_all_a{
  flex:1;
  display:-webkit-flex;
  box-sizing:border-box;
  flex-direction:row;
  justify-content:flex-end;
  align-items: center;
  
}

.order_main{
  width:100%; 
  padding-top: 50rpx;
  padding-bottom: 50rpx;
  display:-webkit-flex;
  box-sizing:border-box;
  flex-direction:row;
  justify-content:center;
  align-items: center;
}

.order_all_b{
  flex:1;
  display:-webkit-flex;
  box-sizing:border-box;
  flex-direction:column;
  justify-content:flex-end;
  align-items: center;
}

.account{
  width:calc(100% - 60rpx);
  height:80rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  box-sizing:border-box;
  display:-webkit-flex;
  justify-content:center;
  align-items: center;
  flex-direction:column;
  background-color: #fff;
  border-radius: 10rpx;
  margin-top: 30rpx
}